FROM python:3.11-slim

WORKDIR /app

# Install dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy app
COPY forecast_integrity_app.py .

# Expose Streamlit port
EXPOSE 7860

# Run Streamlit
CMD ["streamlit", "run", "forecast_integrity_app.py", "--server.port=7860", "--server.address=0.0.0.0", "--server.headless=true"]
